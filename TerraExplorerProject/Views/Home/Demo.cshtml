<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Card Gallery</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!-- Custom CSS -->
    <style>
        /* Set card width and height */
        .card {
            width: 200px;
            height: 250px;
            cursor: pointer;
        }

        /* Set enlarged card width and position */
        .enlarged-card {
            width: 35%;
            position: fixed;
            right: 0;
            top: 0;
            bottom: 0;
            overflow-y: scroll;
            padding: 10px;
            background-color: white;
            display: none;
        }

        /* Show enlarged card when card is clicked */
        .card:hover + .enlarged-card {
            display: block;
        }
    </style>
</head>
<body>
    <!-- Container to hold the cards -->
    <div class="container">
        <!-- Row to hold the cards -->
        <div class="row">
            <!-- Loop through the cards and display them -->
            @* {% for card in cards %} *@
            <div class="col-md-4">
                <div class="card">
                    <img src="https://dummyimage.com/640x4:3/" alt="{{ card.alt }}" class="card-img-top" />
                    <div class="card-body">
                        <p class="card-text">lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum</p>
                    </div>
                </div>
                <!-- Enlarged card -->
                <div class="enlarged-card">
                    <img src="~/images/logo.png" alt="{{ card.alt }}" class="card-img-top" />
                    <div class="card-body">
                        <h5 class="card-title">Title</h5>
                        <p class="card-text">lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum </p>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">Media type: images</li>
                            <li class="list-group-item">Year: 2023</li>
                            <!-- Other attributes can be added here -->
                        </ul>
                    </div>
                </div>
            </div>
            @* {% endfor %} *@
        </div>
    </div>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>
