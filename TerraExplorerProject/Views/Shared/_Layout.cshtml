<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Terra Explorer - @ViewBag.Param</title>
    <link rel="icon" href="~/images/favicon.png" type="image/png">
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <form asp-controller="Home" asp-action="SearchResults" method="post">
            <div class="input-group mb-3 row">
                <div class="col-3">
                    <a href="/" class="logo-wrapper">
                        <img src="~/images/logo.png" />
                    </a>

                </div>
                <div class="col-5 mb-2">
                    <input type="text" name="param" class="form-control" placeholder="Write Here..." aria-label="Search NASA Images" aria-describedby="search-button" autocomplete="off" value="@ViewBag.Param">
                </div>
                <div class="col-1 mb-2 d-flex justify-content-center align-items-center">
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="submit" id="search-button">Search</button>
                    </div>
                </div>
                <div class="col-3">
                    <div class="hamburger-wrapper">
                        <a href="#" class="btn btn-primary"> l l l</a>
                    </div>
                </div>
            </div>
        </form>
    </header>

