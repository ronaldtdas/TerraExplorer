<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Terra Explorer @ViewData["Title"]</title>
    <link rel="icon" href="~/images/favicon.png" type="image/png">
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TerraExplorerProject.styles.css" asp-append-version="true" />
</head>
<body>
    <header id="navbar">
        <form asp-controller="Home" asp-action="SearchResults" method="post">
            <div class="input-group mb-3 row">
                <div class="col-3">
                    <a href="/" class="logo-wrapper">
                        <img src="~/images/logo.png" />
                    </a>

                </div>
                <div class="col-5 mb-2">
                    <input type="text" name="param" class="form-control" placeholder="Write Here..." aria-label="Search NASA Images" aria-describedby="search-button" autocomplete="off" value="@ViewBag.Param">
                </div>
                <div class="col-1 mb-2 d-flex justify-content-center align-items-center">
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="submit" id="search-button" style="background-color:#333; border-color:#333">Search</button>
                    </div>
                </div>
                <div class="col-3">
                    <div class="hamburger-wrapper">
                        <a href="#" class="btn btn-primary" style="background-color:#333; border-color:#333"> l l l</a>
                    </div>
                </div>
            </div>
        </form>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - TerraExplorerProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
